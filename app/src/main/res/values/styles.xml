<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="colorAccent">#00DD00</item>-->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="post_text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- Active thumb color & Active track color(30% transparency) switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">#00AA00</item>
        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">#666666</item>
        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色 30%这个颜色 -->
        <item name="android:colorForeground">#999999</item>
        <!--使用方法： 在布局文件中给需要自定义控件中增加app:theme="@style/MySwitch"-->
    </style>

    <style name="SignInDialog">
        <item name="android:windowBackground">@color/myColorPrimaryLight</item>
    </style>

    <style name="Button_post_comment" parent="@style/Widget.AppCompat.Button.Borderless">

    </style>

    <style name="add_order_icon_style">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:tint">@color/myColorPrimaryDark</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black_3f3a3a</item>
    </style>

    <style name="ProgressThemeDark" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/White</item>
    </style>

    <style name="AddOrderDialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="new_comment">

    </style>

    <style name="text_detail_star">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="order_icon_style">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:tint">@color/myColorPrimaryDark</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textSize">12dp</item>
    </style>

</resources>
