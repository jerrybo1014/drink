<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="app.jerry.drink.order.OrderVIewModel" />

        <import type="android.view.View"/>
        <import type="app.jerry.drink.network.LoadApiStatus"/>
    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:background="@color/home_background"
        >


        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_corner_r"
            android:inputType="number"
            app:iconifiedByDefault="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="查詢訂單編號" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_view"
            app:layout_constraintVertical_bias="1.0">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_corner_r"
                    android:backgroundTint="@color/White"
                    android:paddingHorizontal="8dp"
                    android:visibility="@{viewModel.orderLists.order == null  ? View.GONE:View.VISIBLE}">

                    <TextView
                        android:id="@+id/text_status_add_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_marginEnd="2dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="invisible"
                        android:text='@{viewModel.orderLists.order.status == true ? @string/order_status_active:@string/order_status_inactive}'
                        app:layout_constraintBottom_toTopOf="@+id/line_add_order"
                        app:layout_constraintEnd_toStartOf="@+id/switch1" />


                    <TextView
                        android:id="@+id/text_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:text="@{viewModel.orderLists.order.id}"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@+id/textView_order_id"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView_order_id"
                />


                    <TextView
                        android:id="@+id/button_add_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/background_post_button"
                        android:fontFamily="@font/noto_sans"
                        android:padding="8dp"
                        android:text="新增品項"
                        android:letterSpacing="1.0"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:visibility="@{viewModel.orderLists.order.status == true ? View.VISIBLE:View.GONE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recycler_order_list" />


                    <ImageView
                        android:id="@+id/image_order_id"
                        style="@style/add_order_icon_style"
                        android:src="@drawable/ic_featured_play_list_black_24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_id"
                        android:textSize="16dp"
                        android:textColor="@color/text_color_hint"
                        android:fontFamily="@font/noto_sans"
                        android:layout_marginStart="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/image_order_id"
                        app:layout_constraintStart_toEndOf="@+id/image_order_id"
                        app:layout_constraintTop_toTopOf="@+id/image_order_id" />



                    <ImageView
                        android:id="@+id/image_host_order"
                        style="@style/add_order_icon_style"
                        android:src="@drawable/people"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/image_order_id" />

                    <TextView
                        android:id="@+id/text_host_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/order_host"
                        android:textSize="16dp"
                        android:textColor="@color/text_color_hint"
                        app:layout_constraintBottom_toBottomOf="@+id/image_host_order"
                        app:layout_constraintStart_toEndOf="@+id/image_host_order"
                        app:layout_constraintTop_toTopOf="@+id/image_host_order" />

                    <TextView
                        android:id="@+id/order_host_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/text_color"
                        android:text="@{viewModel.orderLists.order.user.name}"
                        app:layout_constraintBaseline_toBaselineOf="@+id/text_host_order"
                        app:layout_constraintStart_toEndOf="@+id/text_host_order" />

                    <ImageView
                        android:id="@+id/image_store_order"
                        style="@style/add_order_icon_style"
                        android:src="@drawable/store_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_host_order" />

                    <TextView
                        android:id="@+id/text_store_create_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/post_store"
                        android:textSize="16dp"
                        android:textColor="@color/text_color_hint"
                        app:layout_constraintBottom_toBottomOf="@+id/image_store_order"
                        app:layout_constraintStart_toEndOf="@+id/image_store_order"
                        app:layout_constraintTop_toTopOf="@+id/image_store_order" />

                    <TextView
                        android:id="@+id/order_host_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/text_color"
                        android:text="@{viewModel.orderLists.order.store.storeName}"
                        app:layout_constraintBaseline_toBaselineOf="@+id/text_store_create_order"
                        app:layout_constraintStart_toEndOf="@+id/text_host_order" />


                    <ImageView
                        android:id="@+id/image_time_order"
                        style="@style/add_order_icon_style"
                        android:src="@drawable/clock_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_store_order" />

                    <TextView
                        android:id="@+id/text_time_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/post_time"
                        android:textSize="16dp"
                        android:textColor="@color/text_color_hint"
                        app:layout_constraintBottom_toBottomOf="@+id/image_time_order"
                        app:layout_constraintStart_toEndOf="@+id/image_time_order"
                        app:layout_constraintTop_toTopOf="@+id/image_time_order" />

                    <TextView
                        android:id="@+id/order_time_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/text_color"
                        android:text="@{viewModel.orderLists.order.timeLimit}"
                        app:layout_constraintBaseline_toBaselineOf="@+id/text_time_order"
                        app:layout_constraintStart_toEndOf="@+id/text_host_order" />


                    <ImageView
                        android:id="@+id/image_note_create_order"
                        style="@style/add_order_icon_style"
                        android:src="@drawable/notes"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_time_order" />

                    <TextView
                        android:id="@+id/text_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="備註"
                        android:textSize="16dp"
                        android:textColor="@color/text_color_hint"
                        app:layout_constraintBottom_toBottomOf="@+id/image_note_create_order"
                        app:layout_constraintStart_toEndOf="@+id/image_note_create_order"
                        app:layout_constraintTop_toTopOf="@+id/image_note_create_order" />

                    <TextView
                        android:id="@+id/order_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/text_color"
                        android:text="@{viewModel.orderLists.order.note}"
                        app:layout_constraintBaseline_toBaselineOf="@+id/text_note"
                        app:layout_constraintStart_toEndOf="@+id/text_host_order" />

                    <View
                        android:id="@+id/line_add_order"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:background="#666666"
                        android:visibility="invisible"
                        app:layout_constraintTop_toBottomOf="@+id/text_note" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_order_list"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/image_note_create_order" />

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@color/myColorPrimaryDark"
                        android:checked="@{viewModel.orderLists.order.status==true ? true:false}"
                        android:onClick="@{() -> viewModel.editOrderStatusResult()}"
                        android:theme="@style/MySwitch"
                        android:visibility="@{viewModel.userStatus==true ? View.VISIBLE:View.INVISIBLE}"
                        app:layout_constraintBottom_toTopOf="@+id/line_add_order"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/image_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share_black_24dp"
                        android:tint="#B3FFFFFF"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_order_id"
                        app:layout_constraintStart_toEndOf="@+id/text_order_id"
                        app:layout_constraintTop_toTopOf="@+id/text_order_id" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </ScrollView>

        <ImageView
            android:id="@+id/image_add_order"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:clickable="true"
            android:tint="#B3FFFFFF"
            android:src="@drawable/add_order"
            android:visibility="@{viewModel.orderLists.order == null  &amp; viewModel.status != LoadApiStatus.LOADING ? View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_add_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="點擊我新增訂單!"
            android:textSize="16dp"
            android:fontFamily="@font/noto_sans"
            android:layout_marginTop="16dp"
            android:visibility="@{viewModel.orderLists.order == null &amp; viewModel.status != LoadApiStatus.LOADING  ? View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="@+id/image_add_order"
            app:layout_constraintStart_toStartOf="@+id/image_add_order"
            app:layout_constraintTop_toBottomOf="@+id/image_add_order" />

        <ProgressBar
            android:theme="@style/ProgressTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setupApiStatus="@{viewModel.status}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>