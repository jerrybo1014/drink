<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="app.jerry.drink.radar.RadarViewModel" />

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">


        <com.google.android.gms.maps.MapView
            android:id="@+id/radar_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/button_1m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="1Km"
            android:textSize="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_post_button"
            android:backgroundTint="#99FFFFFF"
            map:layout_constraintBottom_toBottomOf="@+id/textView2"
            map:layout_constraintStart_toEndOf="@+id/textView2"
            map:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/button_2m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_post_button"
            android:text="2Km"
            android:textSize="16dp"
            android:backgroundTint="#99FFFFFF"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            map:layout_constraintStart_toEndOf="@+id/button_1m"
            map:layout_constraintTop_toTopOf="@+id/button_1m" />
        
        <TextView
            android:id="@+id/button_3m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_post_button"
            android:padding="8dp"
            android:text="3Km"
            android:textSize="16dp"
            android:backgroundTint="#99FFFFFF"
            android:layout_marginStart="16dp"
            map:layout_constraintStart_toEndOf="@+id/button_2m"
            map:layout_constraintTop_toTopOf="@+id/button_2m" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:text="搜索範圍"
            android:textSize="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                map:cardCornerRadius="15dp"
                map:cardElevation="10dp"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="16dp"
                android:clickable="true"
                android:visibility="@{viewModel.storeCardStatus == true ? View.VISIBLE:View.INVISIBLE}"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    map:layout_constraintBottom_toBottomOf="@+id/radar_map"
                    map:layout_constraintEnd_toEndOf="parent"
                    map:layout_constraintStart_toStartOf="parent">

                    <ImageView
                    android:id="@+id/image_call_phone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/shape_circle"
                    android:padding="6dp"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:tint="#37A0C8"
                    map:layout_constraintBottom_toBottomOf="parent"
                    map:layout_constraintEnd_toEndOf="parent"
                    map:layout_constraintTop_toBottomOf="@+id/recycler_store_high_score" />

                    <ImageView
                        android:id="@+id/image_navigation_to_store"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_circle"
                        android:padding="6dp"
                        android:src="@drawable/ic_navigation_black_24dp"
                        android:tint="#37A0C8"
                        android:layout_marginEnd="20dp"
                        map:layout_constraintBottom_toBottomOf="parent"
                        map:layout_constraintEnd_toStartOf="@+id/image_call_phone"
                        map:layout_constraintTop_toBottomOf="@+id/recycler_store_high_score" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_store_high_score"
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        map:listStoreHighScore="@{viewModel.newDrinkRank}"
                        map:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        map:layout_constraintEnd_toEndOf="parent"
                        map:layout_constraintStart_toStartOf="parent"
                        map:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_store_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="@{viewModel.displayStoreLocation}"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        map:layout_constraintStart_toStartOf="parent"
                        map:layout_constraintTop_toBottomOf="@+id/recycler_store_high_score" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>