<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="app.jerry.drink.radar.RadarViewModel" />

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">


        <com.google.android.gms.maps.MapView
            android:id="@+id/radar_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/button_1m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="1Km"
            android:textSize="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_post_button"
            android:backgroundTint="#99FFFFFF"
            map:layout_constraintBottom_toBottomOf="@+id/textView2"
            map:layout_constraintStart_toEndOf="@+id/textView2"
            map:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/button_2m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_post_button"
            android:text="2Km"
            android:textSize="16dp"
            android:backgroundTint="#99FFFFFF"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            map:layout_constraintStart_toEndOf="@+id/button_1m"
            map:layout_constraintTop_toTopOf="@+id/button_1m" />
        
        <TextView
            android:id="@+id/button_3m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_post_button"
            android:padding="8dp"
            android:text="3Km"
            android:textSize="16dp"
            android:backgroundTint="#99FFFFFF"
            android:layout_marginStart="16dp"
            map:layout_constraintStart_toEndOf="@+id/button_2m"
            map:layout_constraintTop_toTopOf="@+id/button_2m" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:text="搜索範圍"
            android:textSize="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                map:cardCornerRadius="10dp"
                map:cardElevation="10dp"
                android:layout_marginBottom="72dp"
                android:layout_marginHorizontal="16dp"
                android:clickable="true"
                android:visibility="@{viewModel.storeCardStatus == true ? View.VISIBLE:View.INVISIBLE}"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    map:layout_constraintBottom_toBottomOf="@+id/radar_map"
                    map:layout_constraintEnd_toEndOf="parent"
                    map:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/text_call_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123456789"
                        android:textSize="32dp"
                        map:layout_constraintStart_toStartOf="parent"
                        map:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>